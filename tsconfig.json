{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/connection-manager.ts",
    "src/terminal-manager.ts",
    "src/logger.ts",
    "src/types.ts",
    "src/node-pty.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/renderer"
  ]
}